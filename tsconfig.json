{
  "compilerOptions": {
    "target"                          : "ES2022",
    "module"                          : "CommonJS",
    "moduleResolution"                : "node",
    "lib"                             : [
      "ESNext",
      "DOM"
    ],
    "strict"                          : true,
    "esModuleInterop"                 : true,
    "skipLibCheck"                    : true,
    "forceConsistentCasingInFileNames": true,
    "outDir"                          : "./dist",
    "declaration"                     : true,
    "sourceMap"                       : true
  },
  "include"        : [
    "lib/**/*"
  ],
  "exclude"        : [
    "node_modules",
    "test"
  ]
}
